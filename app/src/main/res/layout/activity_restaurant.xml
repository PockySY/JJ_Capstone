<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/restaurant_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3198E5"
    tools:context=".Restaurant">

    <LinearLayout
        android:id="@+id/resInf_bar_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/back_btn"
            android:layout_width="120dp"
            android:layout_height="82dp"
            android:background="@drawable/log_btn"
            android:text="&lt;"
            android:textColor="#000000"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/restaurantInf_bar"
            android:layout_width="291dp"
            android:layout_height="82dp"
            android:layout_marginTop="-3dp"
            android:background="@drawable/title_style"
            android:gravity="center"
            android:text="식당 정보"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/log_style"
        android:gravity="center|left"
        android:paddingLeft="130dp"
        android:text="식당명"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resInf_bar_linearLayout" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:background="@drawable/log_style"
        android:gravity="center|left"
        android:paddingLeft="130dp"
        android:text="\t별점"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        tools:ignore="MissingConstraints,TextSizeCheck" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:background="@drawable/log_style"
        android:gravity="center|left"
        android:paddingLeft="130dp"
        android:text="\t 메뉴"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints,TextSizeCheck" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:background="@drawable/log_style"
        android:gravity="center|left"
        android:paddingLeft="130dp"
        android:text="\t 리뷰"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints,TextSizeCheck" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="330dp"
        android:layout_height="230dp"
        android:background="@drawable/log_style"
        android:gravity="center|left"
        android:paddingLeft="130dp"
        android:text="\t 지도"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="MissingConstraints,TextSizeCheck" />

    <TextView
        android:id="@+id/restaurant_check_bar"
        android:layout_width="330dp"
        android:layout_height="44dp"
        android:background="@drawable/title_style"
        android:paddingTop="6dp"
        android:text="\t 제휴 업체"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />


    <TextView
        android:id="@+id/restaurant_check_btn"
        android:layout_width="80dp"
        android:layout_height="44dp"
        android:background="@drawable/log_btn"
        android:text="O / X"
        android:textColor="#000000"
        android:textColorHighlight="#FED40E"
        android:textSize="25sp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.867"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>