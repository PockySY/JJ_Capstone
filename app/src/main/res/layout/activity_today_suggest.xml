<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/today_suggest_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3ca0ff"
    tools:context=".TodaySuggest">

    <LinearLayout
        android:id="@+id/today_suggest_bar_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/back_btn"
            android:layout_width="120dp"
            android:layout_height="82dp"
            android:background="@drawable/log_btn"
            android:text="&lt;"
            android:textColor="#000000"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/today_suggest_bar"
            android:layout_width="291dp"
            android:layout_height="82dp"
            android:layout_marginTop="-3dp"
            android:background="@drawable/title_style"
            android:gravity="center"
            android:text="오늘의 추천"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/log_style"
        android:gravity="center"
        android:text="현재 기온"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/today_suggest_bar_linearLayout" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="330dp"
        android:layout_height="110dp"
        android:background="@drawable/log_style"
        android:gravity="center"
        android:text="\t\t\t\t\t\t\t ~ 한 오늘 \n 오늘 이런음식 어때요?"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="330dp"
        android:layout_height="340dp"
        android:background="@drawable/log_style"
        android:gravity="center|left"
        android:text="\n 가게명 : \n 평점 : \n 메뉴명 : \n 가격 : \n 위치 :"
        android:textSize="30dp"
        android:paddingLeft="10dp"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>